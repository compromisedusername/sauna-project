{
  "engines": {
    "node": ">=20.6.0"
  },
  "name": "@sauna-project-monorepo/backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon --exec ts-node src/app.ts",
    "build": "tsc",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "db:migrate": "npm run typeorm migration:run -d ./src/data-source.ts",
    "db:generate": "npm run typeorm migration:generate ./src/migrations/$npm_config_name -d ./src/data-source.ts",
    "db:revert": "npm run typeorm migration:revert -d ./src/data-source.ts"
  },
