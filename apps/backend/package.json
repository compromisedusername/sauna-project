{
  "engines": {
    "node": ">=20.6.0"
  },
  "name": "@sauna-project-monorepo/backend",
  "private": true,
  "version": "1.0.0",
  "main": "app.ts",
  "scripts": {
    "seed": "ts-node ./src/config/seed.ts",
    "argument": "echo The value is $npm_config_arg",
    "dev": "nodemon --exec ts-node src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:run": "npm run typeorm -- migration:run -d ./src/config/ormconfig.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d ./src/config/ormconfig.ts",
    "schema:sync": "npm run typeorm -- schema:sync -d ./src/config/ormconfig.ts",
    "migration:show": "npm run typeorm -- migration:show -d ./src/config/ormconfig.ts",
    "migration:generate": "npm run typeorm -- migration:generate ./src/migrations/${npm_config_name} -d ./src/config/ormconfig.ts",
    "migration:create": "npm run typeorm -- migration:create ./src/migrations/Migration"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "concurrently": "^9.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "express-validator": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "memory-cache": "^0.2.0",
    "mysql2": "^3.12.0",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-validator": "^2.20.33",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/memory-cache": "^0.2.6",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "ts-json-schema-generator": "^2.3.0",
    "ts-node": "^10.9.2",
    "typeorm": "^0.3.20",
    "typeorm-ts-node-esm": "^0.3.20",
    "typescript": "^5.7.2"
  }
}
